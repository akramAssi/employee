<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:elevation="25dp"
            android:gravity="center_vertical"
            android:minHeight="240dp"
            android:orientation="horizontal"
            android:paddingStart="13dp"
            android:paddingTop="25dp"
            android:paddingEnd="13dp"
            android:paddingBottom="25dp">

            <ImageView
                android:id="@+id/personImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                app:srcCompat="@drawable/man"
                android:contentDescription="@string/description_icon_person" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica_oblique"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/name_demo"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.005"
                        app:srcCompat="@drawable/id_24"
                        android:contentDescription="@string/id_icon" />

                    <TextView
                        android:id="@+id/idText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="13dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_oblique"
                        android:gravity="start|center_vertical"
                        android:text="@string/id_demo"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="33dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.005"
                        app:srcCompat="@drawable/gender"
                        android:contentDescription="@string/icon_gender"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/genderText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="13dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_oblique"
                        android:gravity="start|center_vertical"
                        android:text="@string/gender_demo"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/salaryView"
                        android:layout_width="33dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.005"
                        android:contentDescription="@string/salary_icon"
                        app:srcCompat="@drawable/salary" />

                    <TextView
                        android:id="@+id/salaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="13dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_oblique"
                        android:gravity="start|center_vertical"
                        android:text="@string/salary_demo"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/salesView4"
                        android:layout_width="33dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.005"
                        app:srcCompat="@drawable/total_sales"
                        android:contentDescription="@string/sales_icon" />

                    <TextView
                        android:id="@+id/salesText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="13dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_oblique"
                        android:gravity="start|center_vertical"
                        android:text="@string/sales_demo"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/reteView"
                        android:layout_width="33dp"
                        android:layout_height="24dp"
                        android:layout_weight="0.005"
                        android:padding="5dp"
                        app:srcCompat="@drawable/equal"
                        android:contentDescription="@string/rate_icon" />

                    <TextView
                        android:id="@+id/rateText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="13dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/helvetica_oblique"
                        android:gravity="start|center_vertical"
                        android:text="@string/rate_demo"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:paddingBottom="20dp"
                    app:srcCompat="@drawable/edit"
                    android:contentDescription="@string/edit_icon" />

                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/trash"
                    android:contentDescription="@string/delete_icon"
                    app:tint="@color/delete" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>